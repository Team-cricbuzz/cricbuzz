package com.example.demo.resourse;

import java.util.List;

import javax.websocket.server.PathParam;
import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.container.AsyncResponse;
import javax.ws.rs.container.Suspended;
import javax.ws.rs.core.MediaType;

import org.glassfish.jersey.server.ManagedAsync;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.example.demo.api.MatchData;
import com.example.demo.dao.api.MatchDao;
@Component
@Path("/matches")


public class Match{
	@Autowired
	MatchDao matchDao;
	
	@GET
	@Produces(MediaType.APPLICATION_JSON)
	@ManagedAsync
	public void read(@Suspended final AsyncResponse asyncresponse) {
		
		asyncresponse.resume(matchDao);
	}
	
	public void read(@Suspended final AsyncResponse asyncresponse,@PathParam("uniqueid") String uniqueid) {
		
		asyncresponse.resume(matchDao.getMatchByUniqueid(uniqueid));
	}
}