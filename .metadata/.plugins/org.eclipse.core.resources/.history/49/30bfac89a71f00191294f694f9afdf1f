package com.example.demo.dao;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import com.demo.mdel.Players;
import com.demo.repository.PlayersRepository;
import com.example.demo.model.Matches;
import com.example.demo.repository.MatchesRepository;

@RestController
public class MatchesDao {
	@Autowired
	MatchesRepository  matchrepo;
	
	/*
	@RequestMapping(method=RequestMethod.POST,value="/player/create")
	public Players create(@RequestBody Players p) {
		
		return playerrepo.save(p);
	}
   
	@RequestMapping(method=RequestMethod.PUT,value="/player/update")
	public Players update(@RequestBody Players p) {
		return playerrepo.save(p);
		
	}*/
	
	@RequestMapping(method=RequestMethod.GET,value="player/all")
	public List<Matches> read() {
		return matchrepo.findAll();
	}
	
	@RequestMapping(method=RequestMethod.GET,value="player/{name}")
	public Optional<Matches> readbyname(@PathVariable String name) {
		return Matchrepo.findById(name);
	}
}
